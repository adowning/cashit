# Configure npm to use bun by default
engine-strict=true
save-exact=true
package-lock=false
lockfile-version=3
prefer-offline=true
fund=false
audit=false

# Bun specific settings
bunshell=true
bunfig.toml=false

# Cache settings
cache=${HOME}/.npm-cache
prefer-offline=true

# Performance optimizations
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Network settings
maxsockets=50
strict-ssl=true

# Logging
loglevel=warn

# Package registry
registry=https://registry.npmjs.org/
@types:registry=https://registry.npmjs.org/
@babel:registry=https://registry.npmjs.org/
@bcoe:registry=https://registry.npmjs.org/
@istanbuljs:registry=https://registry.npmjs.org/
@microsoft:registry=https://registry.npmjs.org/
@typescript-eslint:registry=https://registry.npmjs.org/
@vue:registry=https://registry.npmjs.org/
@vitejs:registry=https://registry.npmjs.org/
@rollup:registry=https://registry.npmjs.org/
@prisma:registry=https://registry.npmjs.org/
@hono:registry=https://registry.npmjs.org/

# Workspace settings
workspaces-prefix=false
workspaces-strict=true

# Ignore scripts for security
ignore-scripts=false

# Bun specific
bunfig.toml=false
bunshell=true

# Performance
prefer-offline=true
prefer-frozen-lockfile=true
prefer-deferred-installation=true
prefer-builtin-install=true
prefer-linked=true
prefer-dev=true
prefer-optional=true
prefer-peer=true
prefer-bundled=true
prefer-dedupe=true
prefer-flatten=true
prefer-prefer-online=false
prefer-prefer-offline=true
prefer-update-notifier=false
prefer-global=false
prefer-local=true
prefer-prod=false
prefer-shrinkwrap=false
prefer-strict-ssl=true
prefer-tar=true
prefer-tmp=false
prefer-unicode=false
prefer-update-notifier=false
prefer-version=false
